<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<!-- The layout for the Customer Client view -->
<!-- Connects the SearchResult and ItemSelected layouts -->


<!-- The root element is a HBox -->
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>


<HBox alignment="CENTER" spacing="10" styleClass="rootStyle"
      xmlns:fx="http://javafx.com/fxml/1">

    <!-- Search area layout -->
    <VBox styleClass="searchResult" alignment="TOP_CENTER" prefWidth="800"
          spacing="10">

        <!-- Title -->
        <HBox spacing="10" styleClass="titleText">
            <Label text = "HappyShop"/>
        </HBox>

        <!-- Search bar with search icon, text field and ComboBox -->
        <HBox spacing="10">
            <ImageView fx:id="ivSearchIcon" fitHeight="32"
                       fitWidth="32" preserveRatio="true"/>

            <!-- The search bar itself -->
            <TextField fx:id="tfSearchBar"
                       promptText="Search for an item by name or ID" prefWidth="400" />

            <!-- The category selection ComboBox -->
            <ComboBox fx:id="cbCategories" prefWidth="200"/>
        </HBox>

        <HBox>
            <ListView fx:id="lvCardContainer" prefWidth="800" />
        </HBox>

    </VBox>

    <!-- Selected item layout -->
    <!-- Display account button, cart button and textArea with product details-->
    <VBox styleClass="itemSelected" alignment="TOP_CENTER" prefWidth="400"
          spacing="12">

        <!-- Account and Cart Buttons-->
        <HBox alignment="TOP_RIGHT">
            <Button text="Account">


            </Button>

            <Button text="Cart">


            </Button>
        </HBox>

        <!-- Selected Item Title-->
        <HBox alignment="CENTER_LEFT">
            <Label text="Selected Item" id="headerText"/>
        </HBox>

        <!-- Selected Item Information-->
        <TextArea>

        </TextArea>
    </VBox>

</HBox>

