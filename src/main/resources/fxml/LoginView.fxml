<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ci553.happyshop.client.login.LoginController" spacing="15"
      prefHeight="500" prefWidth="500" alignment="CENTER">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <VBox spacing="10" alignment="CENTER">
        <Label style="-fx-font-size: 30px; -fx-font-weight: bold;" text="HappyShop"/>
        <Button style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Customer Login" onAction="#customerLogin"/>
        <Button style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Warehouse Login" onAction="#warehouseLogin"/>
    </VBox>

</HBox>
